{
  "compilerOptions": {
    "outDir": "lib",
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["react", "react-native", "react-native-svg"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "__tests__"]
}